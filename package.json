{
  "name": "wealthfolio-rebalancer-addon",
  "version": "0.2.0",
  "description": "Rebalancer calculates the exact trades you need to keep your portfolio on target, on demand.",
  "type": "module",
  "main": "dist/addon.js",
  "keywords": [
    "wealthfolio",
    "addon"
  ],
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "dev:server": "wealthfolio dev",
    "clean": "rm -rf dist",
    "package": "mkdir -p dist && zip -r dist/$npm_package_name-$npm_package_version.zip manifest.json dist/ assets/ README.md",
    "bundle": "pnpm clean && pnpm build && pnpm package",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "prepare": "lefthook install",
    "version": "node -e \"const fs=require('fs'); const pkg=require('./package.json'); const manifest=require('./manifest.json'); manifest.version=pkg.version; fs.writeFileSync('manifest.json',JSON.stringify(manifest,null,2)+'\\n');\" && git add manifest.json",
    "release": "pnpm version",
    "release:patch": "pnpm version patch && git push --follow-tags",
    "release:minor": "pnpm version minor && git push --follow-tags",
    "release:major": "pnpm version major && git push --follow-tags"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@tanstack/react-query": "^5.87.4",
    "@wealthfolio/addon-sdk": "^1.0.0",
    "@wealthfolio/ui": "^1.0.0",
    "change-case": "^5.4.4",
    "framer-motion": "^12.6.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.7",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/ui": "^3.2.4",
    "@wealthfolio/addon-dev-tools": "^1.0.0",
    "lefthook": "^2.0.1",
    "rollup-plugin-external-globals": "^0.13.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.7",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
